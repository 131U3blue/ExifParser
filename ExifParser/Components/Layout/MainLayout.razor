@using ExifParser.Services
@inherits LayoutComponentBase
@inject PageTitleService TitleService

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        
        <div style="color: #f4f1de; background-color:#e07a5f90; display: flex; flex-direction: row; justify-content: center; align-items: center" class="top-row px-4">
            <h1 style="flex: auto; text-align: center;">@TitleService.Title</h1>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    protected override void OnInitialized()
    {
        TitleService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        TitleService.OnChange -= StateHasChanged;
    }
}